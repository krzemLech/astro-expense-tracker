---
type InputProps = {
  label: string;
  half?: boolean;
  hidden?: boolean;
  error?: string;
} & HTMLInputElement;

const { label, half, placeholder, error, hidden } = Astro.props as InputProps;
---

<div class:list={["fomr-item", { "w-0": hidden }]}>
  <label
    for={label}
    class:list={["text-xs font-extralight text-zinc-400", { hidden }]}
    >{label.toUpperCase()}</label
  >
  <input
    id={label}
    name={label}
    class={`input block w-full mt-1 p-1 px-2 bg-zinc-600 border rounded placeholder:text-zinc-400 placeholder:font-extralight ${half ? "w-20" : "w-60"} ${error ? "border-red-500" : "border-zinc-500"}`}
    {...Astro.props}
    placeholder={placeholder}
    type={hidden ? "hidden" : "text"}
  />
  {(<p class="text-xs font-extralight text-red-500 h-3 pt-1.5">{error}</p>)}
</div>
